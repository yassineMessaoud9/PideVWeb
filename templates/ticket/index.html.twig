{% extends 'baseadmin.html.twig' %}

{% block title %}Table Ticket{% endblock %}

{% block body %}


    <h1></h1>


    <div class="row">
        <div class="col">

            <div class="card shadow">
                <div class="card-header border-0">
                    <h3 class="mb-0">Table des Tickets</h3>
                    <a class="btn btn-sm btn-primary " style="width: 14%; margin-left: 85%; margin-top: -3%" href="{{ path('app_ticket_new') }}">

                        + Ajouter Ticket
                    </a>
                </div>
                <div class="table-responsive ">
                    <table class="table align-items-center table-flush">
                        <thead class="bg-gradient-blue ">
                        <tr>
                            <th>Idticket</th>
                            <th>Prixticket</th>
                            <th>Dateticket</th>
                            <th>Event nom</th>
                            <th scope="col" style="text-align: center">actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for ticket in tickets %}
                            <tr>
                                <th scope="row">
                                    <div class="media align-items-center">

                                        <div class="media-body">
                                            <span class="mb-0 text-sm" style="text-align: center">{{ ticket.idticket }}</span>
                                        </div>
                                    </div>
                                </th>
                                <td style="text-align: center">
                                    {{  ticket.prixticket}}
                                </td>
                                <td>
                      <span class="badge badge-dot mr-4" style="text-align: center">
                        <i class="bg-danger"></i> {{  ticket.dateticket ? ticket.dateticket|date('Y-m-d') : ''}}
                      </span>
                                </td>
                                <td scope="col" style="text-align: center ">
                                    {{  ticket.ideve }}
                                </td>



                                <td style="text-align: center">

                                    <a  href="{{ path('app_ticket_edit', {'idticket': ticket.idticket}) }}" class="btn btn-success " role="button" aria-pressed="true">

                                        <svg
                                                xmlns="http://www.w3.org/2000/svg"
                                                width="16"
                                                height="16"
                                                fill="currentColor"
                                                class="bi bi-pencil-square"
                                                viewBox="0 0 16 16"
                                        >
                                            <path
                                                    d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"
                                            />
                                            <path
                                                    fill-rule="evenodd"
                                                    d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z"
                                            />
                                        </svg>
                                    </a>
                                    {# data-toggle="modal" data-target="#modal-notification" #}
                                    <a   class="btn btn-danger " role="button" aria-pressed="true" href="{{  path('app_ticket_show', {'idticket': ticket.idticket})  }}">

                                        <svg
                                                xmlns="http://www.w3.org/2000/svg"
                                                width="16"
                                                height="16"
                                                fill="currentColor"
                                                class="bi bi-trash"
                                                viewBox="0 0 16 16"
                                        >
                                            <path
                                                    d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z"
                                            />
                                            <path
                                                    fill-rule="evenodd"
                                                    d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z"
                                            />
                                        </svg>
                                    </a>


                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="8">no records found</td>
                            </tr>
                        {% endfor %}







                        </tbody>
                    </table>

                </div>

            </div>
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .table>thead>tr>th{
            color: white;
        }
    </style>
{% endblock %}

