{% extends 'baseadmin.html.twig' %}

{% block title %}Reclamation index{% endblock %}

{% block body %}
    <h1></h1>


    <div class="row">
        <div class="col">

            <div class="card shadow">
                <div class="card-header border-0">
                    <h3 class="mb-0">Table des Reclamations </h3>
                </div>
                <div class="table-responsive ">
                    <table class="table align-items-center table-flush">
                        <thead class="bg-gradient-blue ">
                        <tr>
                            <th>IdReclamation</th>
                            <th>TypeReclamation</th>
                            <th>Description</th>
                            <th>Datereclamation</th>
                            <th>Intitulereclamation</th>
                            <th>Etatreclamation</th>
                            <th scope="col" style="text-align: center">actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for reclamation in reclamations  %}
                            <tr>
                                <th scope="row">
                                    <div class="media align-items-center">

                                        <div class="media-body">
                                            <span class="mb-0 text-sm" style="text-align: center">{{ reclamation.idreclamation}}</span>
                                        </div>
                                    </div>
                                </th>
                                <td style="text-align: center">
                                    {{  reclamation.typereclamation}}
                                </td>
                                <td>
                      <span class="badge badge-dot mr-4" style="text-align: center">
                        <i class="bg-danger"></i> {{   reclamation.description }}
                      </span>
                                </td>
                                <td>
                                    {{ reclamation.datereclamation ? reclamation.datereclamation|date('Y-m-d') : ''  }}
                                </td>
                                <td style="text-align: center">
                                    {{  reclamation.intitulereclamation }}
                                </td>
                                <td style="text-align: center">
                                    {{ reclamation.etatreclamation }}
                                </td>


                                <td>
                                    {# data-toggle="modal" data-target="#modal-notification" #}
                                    <a   class="btn btn-danger " role="button" aria-pressed="true" href="{{  path('app_reclamation_editAdmin', {'idreclamation': reclamation.idreclamation})  }}">

                                        <svg
                                                xmlns="http://www.w3.org/2000/svg"
                                                width="16"
                                                height="16"
                                                fill="currentColor"
                                                class="bi bi-trash"
                                                viewBox="0 0 16 16"
                                        >
                                            <path
                                                    d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z"
                                            />
                                            <path
                                                    fill-rule="evenodd"
                                                    d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z"
                                            />
                                        </svg>
                                    </a>
                                    <a class="fa-thin fa-file-lines" href="{{  path('print')  }}">
                                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 384 512" height="30" width="30"><!--! Font Awesome Pro 6.1.1 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license (Commercial License) Copyright 2022 Fonticons, Inc. --><path d="M88 304H80V256H88C101.3 256 112 266.7 112 280C112 293.3 101.3 304 88 304zM192 256H200C208.8 256 216 263.2 216 272V336C216 344.8 208.8 352 200 352H192V256zM224 0V128C224 145.7 238.3 160 256 160H384V448C384 483.3 355.3 512 320 512H64C28.65 512 0 483.3 0 448V64C0 28.65 28.65 0 64 0H224zM64 224C55.16 224 48 231.2 48 240V368C48 376.8 55.16 384 64 384C72.84 384 80 376.8 80 368V336H88C118.9 336 144 310.9 144 280C144 249.1 118.9 224 88 224H64zM160 368C160 376.8 167.2 384 176 384H200C226.5 384 248 362.5 248 336V272C248 245.5 226.5 224 200 224H176C167.2 224 160 231.2 160 240V368zM288 224C279.2 224 272 231.2 272 240V368C272 376.8 279.2 384 288 384C296.8 384 304 376.8 304 368V320H336C344.8 320 352 312.8 352 304C352 295.2 344.8 288 336 288H304V256H336C344.8 256 352 248.8 352 240C352 231.2 344.8 224 336 224H288zM256 0L384 128H256V0z"/></svg>                            </tr>
                            </td>

                        {% else %}
                            <tr>
                                <td colspan="8">no records found</td>
                            </tr>
                        {% endfor %}







                        </tbody>
                    </table>

                </div>

            </div>
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .table>thead>tr>th{
            color: white;
        }
    </style>
{% endblock %}