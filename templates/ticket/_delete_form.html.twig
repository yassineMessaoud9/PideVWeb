<form method="post" action="{{ path('app_ticket_delete', {'idticket': ticket.idticket}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ ticket.idticket) }}">
    <div class="d-flex justify-content-center">
        <button class="btn btn-danger">Delete</button>
    </div>
</form>
